# custom binding (apps and scripts)
bindsym $mod+Ctrl+e exec rofi -modi emoji -show emoji -kb-custom-1 Ctrl+c 
bindsym $mod+Ctrl+c exec rofi -show calc -modi calc -no-show-match -no-sort
bindsym $mod+Ctrl+s exec fsearch
bindsym $mod+p exec sh ~/.config/rofi/utils/power-menu/script.sh
